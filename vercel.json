{
    "builds": [
      {
        "src": "src/client/**",
        "use": "@vercel/static"
      },
      {
        "src": "src/server/**",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/.*",
        "dest": "src/server/serverless.js"
      },
      {
        "src": "/(.*)",
        "dest": "src/client/$1"
      }
    ],
    "rewrites": [
      {
        "source": "/(.*)",
        "destination": "/$1"
      }
    ]
  }